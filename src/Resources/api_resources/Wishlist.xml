<?xml version="1.0" ?>
<resources xmlns="https://api-platform.com/schema/metadata"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="https://api-platform.com/schema/metadata https://api-platform.com/schema/metadata/metadata-2.0.xsd"
>
<resource class="%bitbag_sylius_wishlist_plugin.model.wishlist.class%" shortName="Wishlist">
    <graphql>
        <operation name="collection_query">
            <attribute name="pagination_type">page</attribute>
        </operation>

<!--        <operation name="shop_get_wishlists">-->
<!--            <attribute name="method">GET</attribute>-->
<!--            <attribute name="controller">bit_bag.sylius_vue_storefront2plugin.controller.list_wishlists_action</attribute>-->
<!--        </operation>-->

    </graphql>

    <attribute name="normalization_context">
        <attribute name="groups">
            <attribute>shop:wishlist:read</attribute>
        </attribute>
    </attribute>

    <attribute name="denormalizationContext">
        <attribute name="groups">
            <attribute>shop:wishlist:write</attribute>
        </attribute>
    </attribute>

    <attribute name="validation_groups">sylius</attribute>

    <collectionOperations>
        <collectionOperation name="shop_get_wishlists">
            <attribute name="method">GET</attribute>
            <attribute name="path">/shop/wishlists</attribute>
            <attribute name="controller">bit_bag.sylius_vue_storefront2plugin.controller.list_wishlists_action</attribute>
        </collectionOperation>

        <collectionOperation name="shop_create_wishlist">
            <attribute name="method">POST</attribute>
            <attribute name="path">/shop/wishlists</attribute>
            <attribute name="messenger">input</attribute>
            <attribute name="input">BitBag\SyliusWishlistPlugin\Command\Wishlist\CreateNewWishlist</attribute>
            <attribute name="denormalization_context">
                <attribute name="groups">shop:wishlist:create</attribute>
            </attribute>
            <attribute name="openapi_context">
                <attribute name="summary">Creates wishlist resource</attribute>
            </attribute>
        </collectionOperation>
    </collectionOperations>

    <itemOperations>
        <itemOperation name="shop_get_wishlist">
            <attribute name="method">GET</attribute>
            <attribute name="path">/shop/wishlist/{id}</attribute>
        </itemOperation>

    </itemOperations>

    <property name="id" identifier="true" writable="false"/>
    <property name="token" identifier="false" writable="false"/>
</resource>
</resources>
