<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <services>
        <defaults autowire="false" autoconfigure="false" public="true" />

        <service
            id="Sylius\Bundle\ApiBundle\Controller\DeleteOrderItemAction"
            class="BitBag\SyliusGraphqlPlugin\Controller\DeleteOrderItemAction"
        >
            <argument type="service" id="sylius_default.bus" />
        </service>

        <service
            id="bitbag.sylius_graphql_plugin.controller.shop_user_post_verify"
            class="BitBag\SyliusGraphqlPlugin\Controller\ShopUserPostVerifyController"
        >
            <argument type="string">%env(VSF2_HOST)%</argument>
            <argument type="service" id="router" />

            <tag name="controller.service_arguments" />
        </service>
    </services>
</container>
