<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults autowire="false" autoconfigure="false" public="false" />

        <service id="bitbag.sylius_graphql.doctrine.orm.attribute_filter"
                 class="BitBag\SyliusGraphqlPlugin\Doctrine\Orm\Filter\AttributeFilter"
                 public="false"
                 abstract="true">
            <argument type="service" id="doctrine" />
            <argument type="service" id="api_platform.iri_converter" />
            <argument>null</argument>
            <argument type="service" id="logger" on-invalid="ignore" />
            <argument key="$nameConverter" type="service" id="api_platform.name_converter" on-invalid="ignore" />
        </service>
        <service id="BitBag\SyliusGraphqlPlugin\Doctrine\Orm\Filter\AttributeFilter"
                 alias="bitbag.sylius_graphql.doctrine.orm.attribute_filter" />
    </services>
</container>
