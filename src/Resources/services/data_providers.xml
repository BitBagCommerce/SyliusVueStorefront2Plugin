<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <services>
        <defaults autowire="false" autoconfigure="false" public="false" />

        <service id="sylius.api.collection_data_provider.taxon"
                 class="BitBag\SyliusVueStorefront2Plugin\DataProvider\TaxonCollectionDataProvider">
            <argument type="service" id="sylius.repository.taxon" />
            <argument type="service" id="api_platform.doctrine.orm.query_extension.pagination" />
            <argument type="service" id="Sylius\Bundle\ApiBundle\Context\UserContextInterface" />
            <argument type="service" id="api_platform.core.bridge.doctrine.orm.util.query_name_generator" />
            <argument type="tagged" tag="api_platform.doctrine.orm.query_extension.collection" />
            <tag name="api_platform.collection_data_provider" priority="15" />
        </service>

        <service id="bitbag.sylius_vue_storefront2_plugin.data_provider.country_collection_data_provider"
                 class="BitBag\SyliusVueStorefront2Plugin\DataProvider\CountryCollectionDataProvider">
            <argument type="service" id="sylius.repository.country" />
            <argument type="service" id="api_platform.doctrine.orm.query_extension.pagination" />
            <argument type="service" id="api_platform.core.bridge.doctrine.orm.util.query_name_generator" />
            <argument type="tagged" tag="api_platform.doctrine.orm.query_extension.collection" />
            <tag name="api_platform.collection_data_provider" priority="15" />
        </service>

        <service id="bitbag.sylius_vue_storefront2_plugin.data_provider.shipping_method_collection_data_provider"
                 class="BitBag\SyliusVueStorefront2Plugin\DataProvider\ShippingMethodCollectionDataProvider">
            <argument type="service" id="sylius.repository.shipping_method" />
            <argument type="service" id="api_platform.doctrine.orm.query_extension.pagination" />
            <argument type="service" id="api_platform.core.bridge.doctrine.orm.util.query_name_generator" />
            <argument type="tagged" tag="api_platform.doctrine.orm.query_extension.collection" />
            <tag name="api_platform.collection_data_provider" priority="15" />
        </service>

        <service
            id="api_platform.doctrine.orm.default.collection_data_provider"
            class="BitBag\SyliusVueStorefront2Plugin\DataProvider\CachedCollectionDataProvider"
        >
            <argument type="service" id="api_platform.doctrine.orm.default.prefetcher" />
            <argument type="service" id="doctrine" />
            <argument type="tagged" tag="api_platform.doctrine.orm.query_extension.collection" />
            <tag name="api_platform.collection_data_provider" />
        </service>

        <service
            id="bitbag.doctrine.orm.default.subresource_data_provider"
            decorates="api_platform.doctrine.orm.default.subresource_data_provider"
            class="BitBag\SyliusVueStorefront2Plugin\DataProvider\CompositeSubresourceDataProvider"
        >
            <argument type="service" id=".inner"/>
            <argument type="tagged_iterator" tag="bitbag.subresource_restricted_provider" />
        </service>

        <service
            id="api_platform.doctrine.orm.default.prefetcher"
            class="BitBag\SyliusVueStorefront2Plugin\DataProvider\PreFetcher\CompositePreFetcher"
        >
            <argument type="tagged_iterator" tag="bitbag.data_provider.data_prefetcher"/>
        </service>

        <service
            id="api_platform.data_provider.data_prefetcher.product_image"
            class="BitBag\SyliusVueStorefront2Plugin\DataProvider\PreFetcher\Product\ProductImagePreFetcher"
        >
            <argument type="service" id="bitbag.sylius_vue_storefront2.doctrine.orm.repository.product_image"/>
            <tag name="bitbag.data_provider.data_prefetcher" />
        </service>

        <service
            id="bitbag.subresource_restricted_provider.product_image"
            class="BitBag\SyliusVueStorefront2Plugin\DataProvider\Subresource\ProductImageSubresourceDataProvider"
        >
            <argument type="service" id="api_platform.doctrine.orm.default.collection_data_provider"/>
            <tag name="bitbag.subresource_restricted_provider" />
        </service>

        <service
            id="api_platform.data_provider.data_prefetcher.product_attribute_value"
            class="BitBag\SyliusVueStorefront2Plugin\DataProvider\PreFetcher\Product\ProductAttributePreFetcher"
        >
            <argument type="service" id="bitbag.sylius_vue_storefront2.doctrine.orm.repository.product_attribute_value"/>
            <tag name="bitbag.data_provider.data_prefetcher" />
        </service>

        <service
            id="bitbag.subresource_restricted_provider.product_attribute_value"
            class="BitBag\SyliusVueStorefront2Plugin\DataProvider\Subresource\ProductAttributeSubresourceDataProvider"
        >
            <argument type="service" id="api_platform.doctrine.orm.default.collection_data_provider"/>
            <tag name="bitbag.subresource_restricted_provider" />
        </service>

        <service
            id="api_platform.data_provider.data_prefetcher.product_variant"
            class="BitBag\SyliusVueStorefront2Plugin\DataProvider\PreFetcher\Product\ProductVariantPreFetcher"
        >
            <argument type="service" id="bitbag.sylius_vue_storefront2.doctrine.orm.repository.product_variant"/>
            <tag name="bitbag.data_provider.data_prefetcher" />
        </service>

        <service
            id="bitbag.subresource_restricted_provider.product_variant"
            class="BitBag\SyliusVueStorefront2Plugin\DataProvider\Subresource\ProductVariantSubresourceDataProvider"
        >
            <argument type="service" id="api_platform.doctrine.orm.default.collection_data_provider"/>
            <tag name="bitbag.subresource_restricted_provider" />
        </service>

        <service
            id="api_platform.data_provider.data_prefetcher.channel_pricing"
            class="BitBag\SyliusVueStorefront2Plugin\DataProvider\PreFetcher\Product\ChannelPricingPreFetcher"
        >
            <argument type="service" id="bitbag.sylius_vue_storefront2.doctrine.orm.repository.channel_pricing"/>
            <tag name="bitbag.data_provider.data_prefetcher" />
        </service>

        <service
            id="bitbag.subresource_restricted_provider.channel_pricing"
            class="BitBag\SyliusVueStorefront2Plugin\DataProvider\Subresource\ChannelPricingSubresourceDataProvider"
        >
            <argument type="service" id="api_platform.doctrine.orm.default.collection_data_provider"/>
            <tag name="bitbag.subresource_restricted_provider" />
        </service>
    </services>
</container>
